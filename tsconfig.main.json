{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/main",
    "rootDir": ".",
    "strict": true,
    "noEmitOnError": true,
    "types": ["node", "electron"],
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["main/**/*.ts"]
}
